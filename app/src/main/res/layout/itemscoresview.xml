<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/sc_img_game"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#CCCCCC"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/sc_t_gamelabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sc_t_gamelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="serif"
        android:text="Game : "
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@+id/sc_img_game"
        app:layout_constraintRight_toLeftOf="@id/sc_t_game"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sc_t_game"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="monospace"
        android:text="Name of Game"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintLeft_toRightOf="@+id/sc_t_gamelabel"
        app:layout_constraintRight_toLeftOf="@id/sc_t_date"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sc_t_playerlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="serif"
        android:text="Player : "
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@+id/sc_img_game"
        app:layout_constraintRight_toLeftOf="@id/sc_t_game"
        app:layout_constraintTop_toBottomOf="@+id/sc_t_gamelabel" />

    <TextView
        android:id="@+id/sc_t_player"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Player Name"
        app:layout_constraintLeft_toRightOf="@+id/sc_t_playerlabel"
        app:layout_constraintRight_toLeftOf="@id/sc_t_date"
        app:layout_constraintTop_toBottomOf="@+id/sc_t_game" />

    <TextView
        android:id="@+id/sc_t_scorelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="serif"
        android:text="Result : "
        android:textStyle="italic"
        app:layout_constraintLeft_toRightOf="@+id/sc_img_game"
        app:layout_constraintRight_toLeftOf="@id/sc_t_player"
        app:layout_constraintTop_toBottomOf="@+id/sc_t_playerlabel" />

    <TextView
        android:id="@+id/sc_t_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Score !"
        app:layout_constraintLeft_toRightOf="@+id/sc_t_scorelabel"
        app:layout_constraintRight_toLeftOf="@id/sc_t_date"
        app:layout_constraintTop_toBottomOf="@+id/sc_t_player" />
    <TextView
        android:id="@+id/sc_t_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="12/03/2018"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/sc_t_game"
        app:layout_constraintHorizontal_weight="1.5"/>


</android.support.constraint.ConstraintLayout>